{
  "name": "wp-block-html",
  "displayName": "WP Block HTML",
  "description": "VSCode Extension that assist coding for unique HTML syntax used in WordPress block themes.",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Nao Komura",
  "publisher": "co6x0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "main": "./out/extension.js",
  "categories": [
    "Programming Languages"
  ],
  "capabilities": {
    "documentFormattingProvider": "true"
  },
  "contributes": {
    "commands": [
      {
        "command": "wp-block-html.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "html",
        "aliases": [
          "html",
          "html"
        ],
        "extensions": [
          ".html"
        ],
        "configuration": "./injection-configuration.json"
      }
    ],
    "grammars": [
      {
        "injectTo": [
          "text.html.derivative"
        ],
        "scopeName": "source.injection.wp-block-html",
        "path": "./syntaxes/html.injection.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "prettier": "^2.8.4",
    "prettier-plugin-wp-block-html": "^0.1.3"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/prettier": "^2.7.2",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  }
}
